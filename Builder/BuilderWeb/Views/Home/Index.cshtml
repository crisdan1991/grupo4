@model activos
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Activos</h3>
                     
                        @using(Html.BeginForm("Index","Home"))
{

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <select class="select form-control-lg" id="listadoAct" name="listadoAct">
                                            <option value="1" disabled>Seleccione</option>
                                            <option value="Computador">Computador</option>
                                            <option value="Auto">Auto</option>
                                            <option value="Mesa">Mesa</option>
                                        </select>
                                      
                                        <label class="form-label" for="firstName">Seleccione el Activo</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input class="btn btn-primary btn-lg" type="submit" value="Construir" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                @if (Model != null)
                                                {
                                                    <th scope="col">Atributos de @Model.activo</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if(Model != null)
                                            {
                                                <tr>
                                                    <td>Código: @Model.codigo</td>
                                                </tr>
                                                <tr>
                                                    <td>Nombre: @Model.nombre</td>
                                                </tr>
                                                <tr>
                                                    <td>Precio: @Model.precio</td>
                                                </tr>
                                                if (Model.departamento != null)
                                                {
                                                    <tr>
                                                        <td>Departamento: @Model.departamento</td>
                                                    </tr>
                                                }
                                                if (Model.anioDepreciacion != null)
                                                {
                                                    <tr>
                                                        <td>Año Depreciación @Model.anioDepreciacion</td>
                                                    </tr>
                                                }
                                                if (Model.añoFabricacion != null)
                                                {
                                                    <tr>
                                                        <td>Año Fabricación @Model.añoFabricacion</td>
                                                    </tr>
                                                }
                                                if (Model.tipo != null)
                                                {
                                                    <tr>
                                                        <td>Tipo: @Model.tipo</td>
                                                    </tr>
                                                }
                                                if (Model.fechaDeCompra != null)
                                                {
                                                <tr>
                                                    <td>Fecha de compra: @Model.fechaDeCompra</td>
                                                    </tr>
                                                }
                                                if (Model.responsable != null)
                                                {
                                                    <tr>
                                                        <td>Reponsable: @Model.responsable</td>
                                                    </tr>
                                                }
                                                if (Model.placa != null)
                                                {
                                                    <tr>
                                                        <td>Placa: @Model.placa</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            <div id="msgid">
                            </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
